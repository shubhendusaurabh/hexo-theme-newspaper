// Carousel
.carousel {
    position: relative;
    box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.64);
}

.carousel-item {}

.carousel-image {
    display: block;
}
.carousel .control {
    background: rgba(0, 0, 0, 0.5);
    border-radius: 50%;
    color: #fff;
    display: block;
    font-size: 3rem;
    height: 3rem;
    line-height: 2.7rem;
    position: absolute;
    top: 50%;
    -webkit-transform: translate(0, -50%);
    cursor: pointer;
    -ms-transform: translate(0, -50%);
    transform: translate(0, -50%);
    text-align: center;
    width: 3rem;
    z-index: 10;
    outline: none;
    border: none;
}

.control:hover {
    background: rgba(0, 0, 0, 0.8);
}

.control.prev {
    left: 2%;
}

.control.next {
    right: 2%;
}
@media (max-width: 600px) {
  .carousel-image {
      max-width: 600px;
  }
}