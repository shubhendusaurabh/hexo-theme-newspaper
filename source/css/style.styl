.td_btn
  cursor: pointer;
  display: block;
  position: relative;
  color: white;
  font-family: 'Open Sans', arial, sans-serif;
  font-weight: 600;
  margin: 0 auto;
  width: 40%;
  text-align: center;
  padding: 5px 10px;
  &:hover
    background-color: #444;
    color: #fff;
  & a:visited, a:active, a:link
    color: #fff

.td_btn_lg {
  padding: 10px 16px;
  font-size: 18px;
  line-height: 1.33;
}

.td_btn_md {
  padding: 9px 12px;
  font-size: 16px;
  line-height: 20px;
}

.td_outlined_btn {
  border-width: 2px;
  border-style: solid;
  border-color: #1aa4ce;
  border-radius: 4px;
  color: #1aa4ce;
  background-color: transparent;
  transition: all 0.1s ease;
  -webkit-transition: all 0.1s ease;
}



