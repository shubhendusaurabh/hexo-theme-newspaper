.toc-container
  float: right;
  margin: 20px 10px 0;
  max-width: 40%;
  background: #eee;
  border-radius: 5px;
  padding: 1rem;
  h5 {
    padding: 0;
    margin: 0;
  }
.toc {
  font-size: 0.8em;
  padding: 0 1em;
  list-style: square;
}
.toc ul, .toc ol {
  padding-left: 1rem;
}
.toc li {
  margin: 0 0 0.25em 0;
}
.toc a {
  text-decoration: none;
}
.toc a:hover,
.toc a:active {
  text-decoration: underline;
}

h3:target {
  animation: highlight 1s ease;
}

@keyframes highlight {
  from { background: yellow; }
  to { background: white; }
}

