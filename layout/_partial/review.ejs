<% if (page.review) { %>
  <section class="center hidden ba mv4">
    <h4 class="f4 bg-near-black white mv0 pv2 ph3">Review Summary</h4>
    <div class="pa3 bt">
      <p class="f6 f5-ns dib lh-copy measure mv0 ph3">
        <%= page.review.summary %>
      </p>
      <% for (i in page.review.features) {%>
        <dl class="fl fn-l w-50 dib-l w-auto-l lh-little mr2-l">
          <dt class="f6 fw4 ml0">
            <%= page.review.features[i].name %>
          </dt>
          <dd class="f3 fw6 ml0">
            <% let stars = parseFloat(page.review.features[i].stars); for(var i = 0; i < stars; ++i) {%>&#x2605;
              <% } %>
          </dd>
        </dl>
        <% } %>
    </div>
  </section>
  <% } %>